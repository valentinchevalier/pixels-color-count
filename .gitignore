# ignore all files starting with . except gitignore file
.*
!.gitignore
!.gitkeep
!.htaccess
!.htpasswd
!.eslintrc

# ignore everything in the "wp-content" directory, except some directories
wp-content/*
!/wp-content/index.php
!wp-content/plugins/
!wp-content/themes/
!wp-content/languages/
!wp-content/uploads/
wp-content/uploads/*
!wp-content/uploads/.htaccess


# Clean wordpress for security
wp-snapshots
license.txt
readme.html
wp-config-sample.php

# Ignore env specific configs
wp-config.dev.php
wp-config.preprod.php
wp-config.prod.php
deploy.ini

# ignore node dependency directories
node_modules/
/vendor
*.lock

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject
.idea

# Hidden files
*.DS_Store
*Thumbs.db ehthumbs.db
*.sass-cache*
*~imageoptim*

# ignore all files that start with ~
~*
# ignore log files and databases
*.log *.sql *.sqlite
# ignore compiled files
*.com *.class *.dll *.exe *.o *.so
# ignore packaged files
*.7z *.dmg *.gz *.iso *.jar *.rar *.tar *.zip
